<!--views/manage-users.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header>
    <h1>Manage Users</h1>
</header>
<div class="container">
    <div class="back-button">
        <a href="/" class="button">‚Üê Back to Homepage</a>
    </div>
    <table>
        <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.user_id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<footer>
    <p>&copy; 2024 Movie Review Platform</p>
</footer>
</body>
</html>
